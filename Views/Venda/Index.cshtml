@model IEnumerable<tech_test_payment_MVC.Models.Venda>

@{
    ViewData["Title"] = "Listagem de vendas";
}

<h2>Vendas</h2>

<p>
    <a asp-action="RegistrarVenda">Nova Venda</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.ItemVendido)
            </th>
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.VendedorId)
            </th>
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                                <td>
                    @Html.DisplayFor(model => item.ItemVendido)
                </td>
                                <td>
                    @Html.DisplayFor(model => item.VendedorId)
                </td>
                                <td>
                    @Html.DisplayFor(model => item.Vendedor)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
